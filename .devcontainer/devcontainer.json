{
  "name": "Computational Psycholinguistics Summer School",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "charliermarsh.ruff",
        "ms-python.flake8",
        "njpwerner.autodocstring",
        "ms-vscode.vscode-json"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.terminal.activateEnvironment": true,
        "jupyter.askForKernelRestart": false,
        "jupyter.interactiveWindow.textEditor.executeSelection": true,
        "files.autoSave": "afterDelay",
        "files.autoSaveDelay": 1000
      }
    }
  },

  "postCreateCommand": "pip install -r requirements.txt && echo 'âœ… Environment setup complete! Ready for computational psycholinguistics analysis.'",
  
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/mlschool-text",
  
  "forwardPorts": [8888, 8000],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Server",
      "onAutoForward": "notify"
    },
    "8000": {
      "label": "HTTP Server",
      "onAutoForward": "ignore"
    }
  }
}
